{% extends 'base2.html.twig' %}

{% block title %}Liste des directions
{% endblock %}


{% block main %}{% endblock %}


{% block breadcrumb %}
	<div class="page-header">
		<div class="row">
			<div class="col-md-6 col-sm-12">
				<div class="title">
					<h4>Liste des directions</h4>
				</div>
				<nav aria-label="breadcrumb" role="navigation">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{path("Accueil")}}">Accueil</a>
						</li>
						<li class="breadcrumb-item active" aria-current="page">
							Liste des directions
						</li>
					</ol>
				</nav>
			</div>

			<div class="col-md-6 col-sm-12 text-right">
				<div>


					<div>
						<a type="submit" href="{{path('app_directions_new')}}" class="btn btn-success">
							<i class="icon-copy ion-plus-round"></i>
							&nbsp; Nouvelle direction
						</a>
					</div>


				</div>
			</div>

		</div>


	</div>
{% endblock %}


{% block list %}

 


	<div class="card-box mb-30">
		<div class="pd-20"></div>
		<div class="pb-20">
			<table class="table hover data-table-export stripe  " id="expensive">
				<thead>
					<tr style="font-weight : bold; text-transform : uppercase">
						<th style="width : 5%" class="datatable-nosort">NÂ°</th>
						<th style="width : 30%" class="datatable-nosort">Direction</th>
						<th style="width : 20%" class="datatable-nosort">Code</th>
						<th style="width : 20%" class="datatable-nosort">Directeur</th>
						<th style="width : 10%" class="datatable-nosort">Actions</th>


					</tr>
				</thead>
				<tbody>

					{% for direction in directions %}

						<tr>
							<td></td>

							<td>{{ direction.Libelle|split('', 50)[0]}}</td>
							<td>
								{{ direction.Code }}</td>
							<td>
								{% if direction.Directeur %}
									<a href="{{ path('app_users_show', {'id': direction.Directeur.id}) }}">
										{{ direction.Directeur.Nom }}
										{{ direction.Directeur.Prenom }}
									</a>
								{% endif %}
							</td>
							<td>

								<div class="dropdown">
									<a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
										<i class="dw dw-more"></i>
									</a>
									<div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
 

												<a class="dropdown-item" title="Voir" href="{{ path('app_directions_show', {'id': direction.id}) }}" type="button">
													<i class="icon-copy fa fa-eye" aria-hidden="true"></i>
													Visualiser</a>


												<a class="dropdown-item" title="Modifier" href="{{ path('app_directions_edit', {'id': direction.id}) }}" type="button">
													<i class="icon-copy fa fa-pencil-square-o" aria-hidden="true"></i>
													Modifier</a>


												{% if direction.status %}
													<a class="dropdown-item" title="Stoper" href="{{ path('app_directions_stop', {'id': direction.id}) }}" type="button">

														<i class="icon-copy fa fa-power-off" aria-hidden="true"></i>
														Stopper</a>


												{% else %}
												 

													<a class="dropdown-item" title="Mettre en service" href="{{ path('app_directions_play', {'id': direction.id}) }}" type="button">

													<i class="icon-copy ion-play"></i>
														Mettre en service</a>
												{% endif %}


											</div>

                                           
									</div>
									</td>
								</tr>
							
						</tr>
                    {% endfor %}
					 
				</tbody>
			</table>
		</div>
	</div>


{% endblock %}
