{% extends 'base2.html.twig' %}
{% block title %}Visualisation de direction
{% endblock %}

{% block main %}{% endblock %}

{% block breadcrumb %}

	<div class="page-header">
		<div class="row">
			<div class="col-md-6 col-sm-12">
				<div class="title">
					<h4>Visualiser une direction</h4>
				</div>
				<nav aria-label="breadcrumb" role="navigation">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{path("Accueil")}}">Accueil</a>
						</li>
						<li class="breadcrumb-item">
							<a href="{{ path('app_directions_index') }}">Liste des directions</a>
						</li>
						<li class="breadcrumb-item active" aria-current="page">
							Visualiser une direction
						</li>
					</ol>
				</nav>
			</div>

			<div class="col-md-6 col-sm-12 text-right">
				<div>

					<div>
						<a type="submit" href="{{ path('app_directions_edit', {'id': direction.id}) }}" class="btn btn-warning">
							<i class="icon-copy ion-edit"></i>
							&nbsp; Modifier
						</a>

					</div>

				</div>
			</div>


		</div>


	</div>
{% endblock %}


{% block list %}

	<div class="card-box mb-30">

		<div class="pb-20">

			<div class="clearfix">
				<div class="pd-20   ">
					<div
						class="pull-left">
						<!-- <h4 class="text-blue h4">Ajout d'un poste</h4> -->
						<p class="mb-30">
							<b>Fiche de direction</b>
						</p>
					</div>

				</div>
			</div>


			<div class="container">


				<div class="row">


					<div class="col-md-6 col-sm-12 ">
						<div class="form-group">
							<label>Id du poste</label>
							<input type="text" name="id" class="form-control" placeholder="Disabled input" disabled="" value="{{ direction.Code }}">
						</div>
					</div>

					<div class="col-md-6 col-sm-12  ">
						<div class="form-group">
							<label>Type du poste</label>
							<input type="text" name="Type" class="form-control" placeholder="Disabled input" disabled="" value="{{direction.Libelle}}">
						</div>
					</div>

				</div>


			</div>


		</div>
	</div>


	<div class="card-box mb-30">

		<div class="pb-20">

			<div class="clearfix">
				<div class="pd-20   ">
					<div
						class="pull-left">
						<!-- <h4 class="text-blue h4">Ajout d'un poste</h4> -->
						<p class="mb-30">
							<b>Liste des services de la
								{{direction.Libelle}}
							</b>
						</p>
					</div>

				</div>
			</div>


			<div class="container">


				<div class="row">

					{% for service in services %}


						<div class="table-responsive">
							<table class="table table-bordered">

								<tbody>
									<tr>
										<th scope="row">
											<a href="{{ path('app_services_show', {'id': service.id}) }}"  >

												{{ service.Libelle}}
											</a>
										</th>
									</tr>
								</tbody>
							</table>
						</div>


					{% else %}
						<p>Pas de services dans cette direction.</p>
					{% endfor %}

				</div>


			</div>


		</div>
	</div>


	<div class="card-box mb-30">

		<div class="pb-20">

			<div class="clearfix">
				<div class="pd-20   ">
					<div
						class="pull-left">
						<!-- <h4 class="text-blue h4">Ajout d'un poste</h4> -->
						<p class="mb-30">
							<b>Liste des utilisateurs de la
								{{direction.Libelle}}
							</b>
						</p>
					</div>

				</div>
			</div>


			<div class="container">


				<div class="row">

					{% for user in users %}
						<div class="table-responsive">
							<table class="table table-striped">

								<tbody>
									<tr>
										<th scope="row">
											<a href="{{ path('app_users_show', {'id': user.id}) }}">

												{{ user.Nom }}
												{{ user.Prenom }}
											</a>
										</th>
									</tr>
								</tbody>
							</table>
						</div>


					{% else %}
						<p>Pas d'utilisateurs dans cette direction.</p>
					{% endfor %}

				</div>


			</div>


		</div>
	</div>


{% endblock %}
