{% extends 'base2.html.twig' %}


{% block title %}Nouveau point de traitement
{% endblock %}

{% block main %}{% endblock %}

{% block breadcrumb %}

	<div class="page-header">
		<div class="row">
			<div class="col-md-6 col-sm-12">
				<div class="title">
					<h4>Nouveau point de traitement</h4>
				</div>
				<nav aria-label="breadcrumb" role="navigation">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{path("Accueil")}}">Accueil</a>
						</li>
						<li class="breadcrumb-item">
							<a href="{{ path('app_secretariats_index') }}">Liste des divisions</a>
						</li>
						<li class="breadcrumb-item active" aria-current="page">
							Nouveau point de traitement
						</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>

{% endblock %}


{% block list %}

	<div class="pd-20 card-box mb-30">

		<div class="pb-20">

			<div class="clearfix">
				 
					<div
						class="pull-left">
						<!-- <h4 class="text-blue h4">Ajout d'un poste</h4> -->
						<p class="mb-30">
							<b>Formulaire d'ajout de point de traitement
							</b>
						</p>
					</div>

				 
			</div>


			<div >

				{{ form_start(form) }}

				<div class="row">

					<div class="col-md-6 col-sm-12 ">
						<div class="form-group">
							<label>{{ form_label(form.Direction, 'Nom de la direction', {'label_attr': {'class': ' '}}) }}</label>
							<div>{{ form_widget(form.Direction, {'attr': {'class': 'form-control custom-select2','placeholder': "Nom de la direction" }}) }}</div>

						</div>
					</div>


					<div class="col-md-6 col-sm-12">
						<div class="form-group">
							<label>{{ form_label(form.Secretaire, 'Secr√©taire de la direction', {'label_attr': {'class': 'foo'}}) }}</label>
							<div>{{ form_widget(form.Secretaire, {'attr': {'class': 'form-control custom-select2'  }}) }}</div>
						</div>
					</div>


					<div class="col-md-12 col-sm-12">
						<div class="form-group">
							<label>{{ form_label(form.Type, 'Type de point de traitement', {'label_attr': {'class': ''}}) }}</label>
							<div>{{ form_widget(form.Type, {'attr': {'class': 'form-control custom-select2'}}) }}</div>
						</div>
					</div>


					<div class="col-md-12 col-sm-12">
						<div class="form-group">
							<button class="create__btn-create btn btn--type-02 btn btn-success">{{ button_label|default('Sauvegarder') }}</button>

						</div>
					</div>


				</div>


			</div>

			{{ form_end(form) }}


		</div>


	</div>


{% endblock %}
