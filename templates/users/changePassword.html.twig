{% extends 'base2.html.twig' %}
{% block title %}Modification de votre profil
{% endblock %}

{% block main %}{% endblock %}

{% block breadcrumb %}

	<div class="page-header">
		<div class="row">
			<div class="col-md-6 col-sm-12">
				<div class="title">
					<h4>Modifier votre profil</h4>
				</div>
				<nav aria-label="breadcrumb" role="navigation">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{path("Accueil")}}">Accueil</a>
						</li>

						<li class="breadcrumb-item active" aria-current="page">
							Modifier votre profil
						</li>
					</ol>
				</nav>
			</div>

			<div class="col-md-6 col-sm-12 text-right">
				<div></div>
			</div>


		</div>


	</div>
{% endblock %}

{% block list %}


	<div class="row">
		<div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 mb-30">
			<div class="pd-20 card-box height-100-p">
				<div class="profile-photo">

					<img src={{ asset('/build/images/avatar.d5137e48.png') }}>

				</div>
				<h5 class="text-center h5 mb-0">{{ app.user.nom }}
					{{ app.user.prenom }}</h5>
				<p class="text-center text-muted font-14">
					{% for role in user.roles %}
						{% if role == 'ROLE_USER' %}
							Utilisateur
						{% else  %}
							Administrateur
						{% endif %}
						<br>
					{% endfor %}
				</p>
				<div class="profile-info">

					<ul>
						<li>
							<span>Email
							</span>
							{{ user.email }}
						</li>

						<li>
							<span>Pays
							</span>
							Benin
						</li>

					</ul>
				</div>


			</div>
		</div>
		<div class="col-xl-8 col-lg-8 col-md-8 col-sm-12 mb-30">
			<div class="card-box height-100-p overflow-hidden">
				<div class="profile-setting pd-20 ">
 

					{{ form_start(form) }}


					<div style="margin-bottom: 20px;">
						{% if notification %}
							{{notification}}
						{% endif %}
						 {{ form_errors(form) }} 
					</div>


					<div class="row">


						<div class="col-md-12 col-sm-12">
							<div class="form-group">
								{{ form_label(form.old_password  ) }}
								{{ form_widget(form.old_password,{'attr': {'class': 'form-control'}}) }}
								<div class='text-danger'>{{ form_errors(form.old_password) }}</div>
							</div>
						</div>


						<div class="col-md-12 col-sm-12">
							<div class="form-group">
								{{ form_label(form.password.first  ) }}
								{{ form_widget(form.password.first,{'attr': {'class': 'form-control'}}) }}
								<div class='text-danger'>{{ form_errors(form.password.first) }}</div>

							</div>
						</div>

						<div class="col-md-12 col-sm-12 ">
							<div class="form-group">
								{{ form_label(form.password.second  ) }}
								{{ form_widget(form.password.second,{'attr': {'class': 'form-control'}}) }}
								<div class='text-danger'>{{ form_errors(form.password.second) }}</div>
							</div>
						</div>


						<div class="col-md-12 col-sm-12">
							<div class="form-group">
								{{ form_widget(form.submit, {'attr': {'class': 'create__btn-create btn btn--type-02 btn btn-warning'}}) }}
							</div>
						</div>


					</div>


					{{ form_end(form) }}


				</div>
				<!-- Setting Tab End -->
			</div>
		</div>
	</div>
{% endblock %}
