{% extends 'base2.html.twig' %}

{% block title %}Liste des utilisateurs
{% endblock %}

{% block main %}{% endblock %}

{% block breadcrumb %}

	<div class="page-header">
		<div class="row">
			<div class="col-md-6 col-sm-12">
				<div class="title">
					<h4>Liste des utilisateurs</h4>
				</div>
				<nav aria-label="breadcrumb" role="navigation">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{path("Accueil")}}">Accueil</a>
						</li>
						<li class="breadcrumb-item active" aria-current="page">
							Liste des utilisateurs
						</li>
					</ol>
				</nav>
			</div>

			<div class="col-md-6 col-sm-12 text-right">
				<div>


					<div>
						<a type="submit" href="{{path('app_users_new')}}" class="btn btn-success">
							<i class="icon-copy ion-plus-round"></i>
							&nbsp; Nouvel utilisateur
						</a>

					</div>


				</div>
			</div>

		</div>


	</div>
{% endblock %}

{% block list %}
 
	<div class="card-box mb-30">
		<div class="pd-20"></div>
		<div class="pb-20">
			<table class="table hover data-table-export stripe  " id="expensive">
				<thead>
					<tr style="font-weight : bold; text-transform : uppercase">
						<th style="width : 5%" class="datatable-nosort">N°</th>
						<th style="width : 15%" class="datatable-nosort">Nom</th>
						<th style="width : 30%" class="datatable-nosort">Prénom(s)</th>
						<th style="width : 25%" class="datatable-nosort">Email</th>
						<th style="width : 15%" class="datatable-nosort">Niveau</th>
						<th style="width : 15%" class="datatable-nosort">Zone</th>
						<th style="width : 10%" class="datatable-nosort">Actions</th>

					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td></td>

							<td>{{ user.Nom }}</td>
							<td>
								{{ user.Prenom }}</td>
							<td>{{ user.Email }}</td>
							<td>{{ user.Niveau }}</td>
							<td>{{ user.Zone }}</td>
							<td>

								<div class="dropdown">
									<a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
										<i class="dw dw-more"></i>
									</a>
									<div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">


										<a class="dropdown-item" title="Voir" href="{{ path('app_users_show', {'id': user.id}) }}" type="button">
											<i class="icon-copy fa fa-eye" aria-hidden="true"></i>
											Visualiser</a>

										<a class="dropdown-item" title="Modifier" href="{{ path('app_users_edit', {'id': user.id}) }}" type="button">
											<i class="icon-copy fa fa-pencil-square-o" aria-hidden="true"></i>
											Modifier</a>

										<a class="dropdown-item" title="Modifier" href="{{ path('app_users_resetPassword', {'id': user.id}) }}" type="button">
											<i class="icon-copy bi bi-arrow-repeat"></i>
											Renitialiser le mot de passe</a>


										{% if user.status %}
											<a class="dropdown-item" title="Stoper" href="{{ path('app_users_stop', {'id': user.id}) }}" type="button">

												<i class="icon-copy fa fa-power-off" aria-hidden="true"></i>
												Stopper</a>


										{% else %}


											<a class="dropdown-item" title="Mettre en service" href="{{ path('app_users_play', {'id': user.id}) }}" type="button">

												<i class="icon-copy ion-play"></i>
												Mettre en service</a>
										{% endif %}


									</div>


								</div>
							</td>
						</tr>

					</tr>
				{% endfor %}

			</tbody>
		</tr>

	</tr>
</tbody></table></div></div>{% endblock %}
